{% extends 'layout.html.twig' %}

{% block title %}Modifier {{ emetteur.nom }} - Factu{% endblock %}

{% block page_title %}Modifier l'émetteur{% endblock %}

{% block page_actions %}
<a href="{{ path('app_admin_emetteurs_show', {id: emetteur.id}) }}" class="btn-secondary">Retour</a>
{% endblock %}

{% block content %}
<div class="max-w-2xl">
    <div class="bg-white rounded-lg shadow p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_row(form.code) }}
                </div>
                <div>
                    {{ form_row(form.nom) }}
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="flex items-center space-x-2">
                    {{ form_widget(form.actif) }}
                    <label class="text-sm text-gray-700">Émetteur actif</label>
                </div>
                <div class="flex items-center space-x-2">
                    {{ form_widget(form.parDefaut) }}
                    <label class="text-sm text-gray-700">Émetteur par défaut</label>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="{{ path('app_admin_emetteurs_show', {id: emetteur.id}) }}" class="btn-secondary">Annuler</a>
                <button type="submit" class="btn-primary">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
