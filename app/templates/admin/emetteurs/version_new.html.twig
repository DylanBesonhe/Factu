{% extends 'layout.html.twig' %}

{% block title %}Nouvelle version - {{ emetteur.nom }} - Factu{% endblock %}

{% block page_title %}
    {% if isFirstVersion %}
        Informations de l'émetteur
    {% else %}
        Nouvelle version - {{ emetteur.nom }}
    {% endif %}
{% endblock %}

{% block page_actions %}
<a href="{{ path('app_admin_emetteurs_show', {id: emetteur.id}) }}" class="btn-secondary">Retour</a>
{% endblock %}

{% block content %}
<div class="max-w-3xl">
    <div class="bg-white rounded-lg shadow p-6">
        {% if not isFirstVersion %}
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <p class="text-sm text-blue-800">
                Les champs sont pré-remplis avec la version actuelle. Modifiez uniquement ce qui change.
            </p>
        </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            {# Date d'effet #}
            <div class="max-w-xs">
                {{ form_row(form.dateEffet) }}
            </div>

            <hr class="my-6">

            {# Informations légales #}
            <h3 class="text-lg font-medium text-gray-900 mb-4">Informations légales</h3>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_row(form.raisonSociale) }}
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_row(form.formeJuridique) }}
                    </div>
                    <div>
                        {{ form_row(form.capital) }}
                    </div>
                </div>
            </div>

            <div>
                {{ form_row(form.adresse, {'attr': {'rows': 3}}) }}
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_row(form.siren) }}
                </div>
                <div>
                    {{ form_row(form.tva) }}
                </div>
            </div>

            <hr class="my-6">

            {# Coordonnées #}
            <h3 class="text-lg font-medium text-gray-900 mb-4">Coordonnées</h3>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_row(form.email) }}
                </div>
                <div>
                    {{ form_row(form.telephone) }}
                </div>
            </div>

            <hr class="my-6">

            {# Coordonnées bancaires #}
            <h3 class="text-lg font-medium text-gray-900 mb-4">Coordonnées bancaires</h3>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_row(form.iban) }}
                </div>
                <div>
                    {{ form_row(form.bic) }}
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t">
                <a href="{{ path('app_admin_emetteurs_show', {id: emetteur.id}) }}" class="btn-secondary">Annuler</a>
                <button type="submit" class="btn-primary">
                    {% if isFirstVersion %}
                        Enregistrer
                    {% else %}
                        Créer cette version
                    {% endif %}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
