{% extends 'layout.html.twig' %}

{% block title %}Modifier {{ client.raisonSociale }} - Factu{% endblock %}

{% block page_title %}Modifier : {{ client.raisonSociale }}{% endblock %}

{% block page_actions %}
<div class="flex space-x-2">
    <a href="{{ path('app_admin_clients_show', {id: client.id}) }}" class="btn-secondary">Annuler</a>
</div>
{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow p-6">
    {{ form_start(form, {attr: {class: 'space-y-6'}}) }}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {# Informations generales #}
        <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900 border-b pb-2">Informations generales</h3>

            <div>
                {{ form_label(form.code) }}
                {{ form_widget(form.code, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.code) }}
            </div>

            <div>
                {{ form_label(form.raisonSociale) }}
                {{ form_widget(form.raisonSociale, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.raisonSociale) }}
            </div>

            <div>
                {{ form_label(form.siren) }}
                {{ form_widget(form.siren, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.siren) }}
            </div>

            <div>
                {{ form_label(form.adresse) }}
                {{ form_widget(form.adresse, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.adresse) }}
            </div>
        </div>

        {# Coordonnees #}
        <div class="space-y-4">
            <h3 class="text-lg font-medium text-gray-900 border-b pb-2">Coordonnees</h3>

            <div>
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div>
                {{ form_label(form.telephone) }}
                {{ form_widget(form.telephone, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.telephone) }}
            </div>

            <div>
                {{ form_label(form.iban) }}
                {{ form_widget(form.iban, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.iban) }}
            </div>

            <div>
                {{ form_label(form.bic) }}
                {{ form_widget(form.bic, {attr: {class: 'form-input w-full'}}) }}
                {{ form_errors(form.bic) }}
            </div>

            <div class="flex items-center pt-2">
                {{ form_widget(form.actif, {attr: {class: 'form-checkbox'}}) }}
                <label for="{{ form.actif.vars.id }}" class="ml-2 text-sm text-gray-700">Client actif</label>
            </div>
        </div>
    </div>

    <div class="flex justify-end pt-6 border-t">
        <button type="submit" class="btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Enregistrer les modifications
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
