{% extends 'layout.html.twig' %}

{% block title %}{{ client.raisonSociale }} - Factu{% endblock %}

{% block page_title %}{{ client.raisonSociale }}{% endblock %}

{% block page_actions %}
<div class="flex items-center space-x-2">
    {% if client.actif %}
        <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">Actif</span>
    {% else %}
        <span class="px-2 py-1 text-xs font-medium text-red-800 bg-red-100 rounded-full">Inactif</span>
    {% endif %}
    <a href="{{ path('app_admin_clients') }}" class="btn-secondary">Retour</a>
    <a href="{{ path('app_admin_clients_edit', {id: client.id}) }}" class="btn-secondary">Modifier</a>
    <form action="{{ path('app_admin_clients_toggle', {id: client.id}) }}" method="post" class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ client.id) }}">
        <button type="submit" class="{{ client.actif ? 'btn-danger' : 'btn-primary' }}">
            {{ client.actif ? 'Desactiver' : 'Activer' }}
        </button>
    </form>
</div>
{% endblock %}

{% block content %}
<div x-data="{ activeTab: 'informations' }">
    {# Tabs navigation #}
    <div class="bg-white rounded-t-lg border-b border-gray-200">
        <nav class="flex -mb-px overflow-x-auto" role="tablist" aria-label="Tabs">
            <button @click="activeTab = 'informations'"
                    :class="activeTab === 'informations' ? 'border-blue-500 text-blue-600 bg-blue-50/50' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 hover:bg-gray-50'"
                    class="inline-flex items-center px-6 py-4 border-b-2 font-medium text-sm transition-all duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Informations
            </button>
            <button @click="activeTab = 'contacts'"
                    :class="activeTab === 'contacts' ? 'border-blue-500 text-blue-600 bg-blue-50/50' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 hover:bg-gray-50'"
                    class="inline-flex items-center px-6 py-4 border-b-2 font-medium text-sm transition-all duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Contacts
                <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded-full" :class="activeTab === 'contacts' ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-600'">{{ client.contacts|length }}</span>
            </button>
            <button @click="activeTab = 'notes'"
                    :class="activeTab === 'notes' ? 'border-blue-500 text-blue-600 bg-blue-50/50' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 hover:bg-gray-50'"
                    class="inline-flex items-center px-6 py-4 border-b-2 font-medium text-sm transition-all duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Notes
                <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded-full" :class="activeTab === 'notes' ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-600'">{{ client.notes|length }}</span>
            </button>
            <button @click="activeTab = 'liens'"
                    :class="activeTab === 'liens' ? 'border-blue-500 text-blue-600 bg-blue-50/50' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 hover:bg-gray-50'"
                    class="inline-flex items-center px-6 py-4 border-b-2 font-medium text-sm transition-all duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                Liens
                <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded-full" :class="activeTab === 'liens' ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-600'">{{ client.liensSource|length + client.liensCible|length }}</span>
            </button>
            <button @click="activeTab = 'contrats'"
                    :class="activeTab === 'contrats' ? 'border-blue-500 text-blue-600 bg-blue-50/50' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 hover:bg-gray-50'"
                    class="inline-flex items-center px-6 py-4 border-b-2 font-medium text-sm transition-all duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Contrats
                <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded-full" :class="activeTab === 'contrats' ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-600'">{{ client.contrats|length }}</span>
            </button>
        </nav>
    </div>

    {# Tab content #}
    <div class="bg-white rounded-b-lg shadow p-6">

        {# Onglet Informations #}
        <div x-show="activeTab === 'informations'">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Informations generales</h3>
                    <dl class="space-y-3">
                        <div>
                            <dt class="text-sm text-gray-500">Code</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.code }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm text-gray-500">Raison sociale</dt>
                            <dd class="text-sm font-medium text-gray-900">{{ client.raisonSociale }}</dd>
                        </div>
                        {% if client.siren %}
                        <div>
                            <dt class="text-sm text-gray-500">SIREN</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.siren }}</dd>
                        </div>
                        {% endif %}
                        {% if client.siret %}
                        <div>
                            <dt class="text-sm text-gray-500">SIRET</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.siret }}</dd>
                        </div>
                        {% endif %}
                        {% if client.tva %}
                        <div>
                            <dt class="text-sm text-gray-500">NÂ° TVA intracommunautaire</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.tva }}</dd>
                        </div>
                        {% endif %}
                        <div>
                            <dt class="text-sm text-gray-500">Code pays</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.codePaysTva }}</dd>
                        </div>
                        {% if client.adresse %}
                        <div>
                            <dt class="text-sm text-gray-500">Adresse</dt>
                            <dd class="text-sm font-medium text-gray-900 whitespace-pre-line">{{ client.adresse }}</dd>
                        </div>
                        {% endif %}
                    </dl>
                </div>
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Coordonnees</h3>
                    <dl class="space-y-3">
                        {% if client.email %}
                        <div>
                            <dt class="text-sm text-gray-500">Email</dt>
                            <dd class="text-sm font-medium text-gray-900">
                                <a href="mailto:{{ client.email }}" class="text-blue-600 hover:underline">{{ client.email }}</a>
                            </dd>
                        </div>
                        {% endif %}
                        {% if client.telephone %}
                        <div>
                            <dt class="text-sm text-gray-500">Telephone</dt>
                            <dd class="text-sm font-medium text-gray-900">{{ client.telephone }}</dd>
                        </div>
                        {% endif %}
                        {% if client.iban %}
                        <div>
                            <dt class="text-sm text-gray-500">IBAN</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.iban }}</dd>
                        </div>
                        {% endif %}
                        {% if client.bic %}
                        <div>
                            <dt class="text-sm text-gray-500">BIC</dt>
                            <dd class="text-sm font-medium text-gray-900 font-mono">{{ client.bic }}</dd>
                        </div>
                        {% endif %}
                    </dl>
                </div>
            </div>
            <div class="mt-6 pt-6 border-t text-sm text-gray-500">
                Cree le {{ client.createdAt|date('d/m/Y a H:i') }}
                {% if client.updatedAt and client.updatedAt != client.createdAt %}
                    - Modifie le {{ client.updatedAt|date('d/m/Y a H:i') }}
                {% endif %}
            </div>
        </div>

        {# Onglet Contacts #}
        <div x-show="activeTab === 'contacts'" x-cloak>
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">Contacts</h3>
            </div>

            {% if client.contacts|length > 0 %}
            <div class="overflow-x-auto mb-6">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-3">Nom</th>
                            <th scope="col" class="px-4 py-3">Fonction</th>
                            <th scope="col" class="px-4 py-3">Email</th>
                            <th scope="col" class="px-4 py-3">Telephone</th>
                            <th scope="col" class="px-4 py-3">Principal</th>
                            <th scope="col" class="px-4 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in client.contacts %}
                        <tr class="bg-white border-b">
                            <td class="px-4 py-3 font-medium text-gray-900">{{ contact.fullName }}</td>
                            <td class="px-4 py-3">{{ contact.fonction ? contact.fonction : '-' }}</td>
                            <td class="px-4 py-3">
                                {% if contact.email %}
                                    <a href="mailto:{{ contact.email }}" class="text-blue-600 hover:underline">{{ contact.email }}</a>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="px-4 py-3">{{ contact.telephone ? contact.telephone : '-' }}</td>
                            <td class="px-4 py-3">
                                {% if contact.principal %}
                                    <span class="text-green-600 font-medium">Oui</span>
                                {% else %}
                                    <form action="{{ path('app_admin_clients_contact_principal', {id: client.id, contactId: contact.id}) }}" method="post" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('principal_contact' ~ contact.id) }}">
                                        <button type="submit" class="text-blue-600 hover:underline text-sm">Definir</button>
                                    </form>
                                {% endif %}
                            </td>
                            <td class="px-4 py-3 text-right">
                                <form action="{{ path('app_admin_clients_contact_delete', {id: client.id, contactId: contact.id}) }}" method="post" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_contact' ~ contact.id) }}">
                                    <button type="submit" class="text-red-600 hover:underline" onclick="return confirm('Supprimer ce contact ?')">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <p class="text-gray-500 mb-6">Aucun contact.</p>
            {% endif %}

            {# Add contact form #}
            <div class="bg-gray-50 rounded-lg p-4">
                <h4 class="text-sm font-medium text-gray-700 mb-3">Ajouter un contact</h4>
                {{ form_start(contactForm, {action: path('app_admin_clients_contact_new', {id: client.id}), attr: {class: 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'}}) }}
                    <div>
                        {{ form_label(contactForm.nom) }}
                        {{ form_widget(contactForm.nom, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <div>
                        {{ form_label(contactForm.prenom) }}
                        {{ form_widget(contactForm.prenom, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <div>
                        {{ form_label(contactForm.fonction) }}
                        {{ form_widget(contactForm.fonction, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <div>
                        {{ form_label(contactForm.email) }}
                        {{ form_widget(contactForm.email, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <div>
                        {{ form_label(contactForm.telephone) }}
                        {{ form_widget(contactForm.telephone, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <div class="flex items-end space-x-4">
                        <div class="flex items-center">
                            {{ form_widget(contactForm.principal, {attr: {class: 'form-checkbox'}}) }}
                            {{ form_label(contactForm.principal, null, {label_attr: {class: 'ml-2 text-sm text-gray-600'}}) }}
                        </div>
                        <button type="submit" class="btn-primary">Ajouter</button>
                    </div>
                {{ form_end(contactForm) }}
            </div>
        </div>

        {# Onglet Notes #}
        <div x-show="activeTab === 'notes'" x-cloak>
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">Notes</h3>
            </div>

            {# Add note form #}
            <div class="bg-gray-50 rounded-lg p-4 mb-6">
                <h4 class="text-sm font-medium text-gray-700 mb-3">Ajouter une note</h4>
                {{ form_start(noteForm, {action: path('app_admin_clients_note_new', {id: client.id}), attr: {class: 'flex flex-col space-y-3'}}) }}
                    {{ form_widget(noteForm.contenu, {attr: {class: 'form-input w-full', rows: 3, placeholder: 'Contenu de la note...'}}) }}
                    <div class="flex justify-end">
                        <button type="submit" class="btn-primary">Ajouter</button>
                    </div>
                {{ form_end(noteForm) }}
            </div>

            {% if client.notes|length > 0 %}
            <div class="space-y-4">
                {% for note in client.notes %}
                <div class="bg-white border border-gray-200 rounded-lg p-4">
                    <div class="flex justify-between items-start mb-2">
                        <span class="text-xs text-gray-500">{{ note.createdAt|date('d/m/Y a H:i') }}</span>
                        <form action="{{ path('app_admin_clients_note_delete', {id: client.id, noteId: note.id}) }}" method="post" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_note' ~ note.id) }}">
                            <button type="submit" class="text-red-600 hover:underline text-xs" onclick="return confirm('Supprimer cette note ?')">Supprimer</button>
                        </form>
                    </div>
                    <p class="text-sm text-gray-700 whitespace-pre-line">{{ note.contenu }}</p>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <p class="text-gray-500">Aucune note.</p>
            {% endif %}
        </div>

        {# Onglet Liens #}
        <div x-show="activeTab === 'liens'" x-cloak>
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">Clients lies</h3>
            </div>

            {% if client.liensSource|length > 0 or client.liensCible|length > 0 %}
            <div class="overflow-x-auto mb-6">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-3">Type</th>
                            <th scope="col" class="px-4 py-3">Client</th>
                            <th scope="col" class="px-4 py-3">Direction</th>
                            <th scope="col" class="px-4 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lien in client.liensSource %}
                        <tr class="bg-white border-b">
                            <td class="px-4 py-3">
                                <span class="px-2 py-1 text-xs font-medium text-purple-800 bg-purple-100 rounded-full">{{ lien.typeLabel }}</span>
                            </td>
                            <td class="px-4 py-3 font-medium text-gray-900">
                                <a href="{{ path('app_admin_clients_show', {id: lien.clientCible.id}) }}" class="text-blue-600 hover:underline">
                                    {{ lien.clientCible.raisonSociale }}
                                </a>
                            </td>
                            <td class="px-4 py-3 text-gray-500">
                                <span class="inline-flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                    Sortant
                                </span>
                            </td>
                            <td class="px-4 py-3 text-right">
                                <form action="{{ path('app_admin_clients_lien_delete', {id: client.id, lienId: lien.id}) }}" method="post" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_lien' ~ lien.id) }}">
                                    <button type="submit" class="text-red-600 hover:underline" onclick="return confirm('Supprimer ce lien ?')">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                        {% for lien in client.liensCible %}
                        <tr class="bg-white border-b">
                            <td class="px-4 py-3">
                                <span class="px-2 py-1 text-xs font-medium text-purple-800 bg-purple-100 rounded-full">{{ lien.typeLabel }}</span>
                            </td>
                            <td class="px-4 py-3 font-medium text-gray-900">
                                <a href="{{ path('app_admin_clients_show', {id: lien.clientSource.id}) }}" class="text-blue-600 hover:underline">
                                    {{ lien.clientSource.raisonSociale }}
                                </a>
                            </td>
                            <td class="px-4 py-3 text-gray-500">
                                <span class="inline-flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
                                    </svg>
                                    Entrant
                                </span>
                            </td>
                            <td class="px-4 py-3 text-right">
                                <span class="text-gray-400 text-xs">Gere depuis l'autre client</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <p class="text-gray-500 mb-6">Aucun lien avec d'autres clients.</p>
            {% endif %}

            {# Add link form #}
            {% if clientsDisponibles|length > 0 %}
            <div class="bg-gray-50 rounded-lg p-4">
                <h4 class="text-sm font-medium text-gray-700 mb-3">Ajouter un lien</h4>
                {{ form_start(lienForm, {action: path('app_admin_clients_lien_new', {id: client.id}), attr: {class: 'flex flex-wrap items-end gap-4'}}) }}
                    <div class="flex-1 min-w-[200px]">
                        {{ form_label(lienForm.clientCible) }}
                        {{ form_widget(lienForm.clientCible, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <div class="w-48">
                        {{ form_label(lienForm.type) }}
                        {{ form_widget(lienForm.type, {attr: {class: 'form-input w-full'}}) }}
                    </div>
                    <button type="submit" class="btn-primary">Ajouter</button>
                {{ form_end(lienForm) }}
            </div>
            {% else %}
            <p class="text-sm text-gray-500">Aucun autre client disponible pour creer un lien.</p>
            {% endif %}
        </div>

        {# Onglet Contrats #}
        <div x-show="activeTab === 'contrats'" x-cloak>
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">Contrats</h3>
            </div>

            {% if client.contrats|length > 0 %}
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-3">Numero</th>
                            <th scope="col" class="px-4 py-3">Instance</th>
                            <th scope="col" class="px-4 py-3">Statut</th>
                            <th scope="col" class="px-4 py-3">Licences</th>
                            <th scope="col" class="px-4 py-3">Total HT</th>
                            <th scope="col" class="px-4 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contrat in client.contrats %}
                        <tr class="bg-white border-b">
                            <td class="px-4 py-3 font-mono font-medium text-gray-900">{{ contrat.numero }}</td>
                            <td class="px-4 py-3">{{ contrat.instance ? contrat.instance.nomActuel : '-' }}</td>
                            <td class="px-4 py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full
                                    {% if contrat.statut == 'actif' %}text-green-800 bg-green-100
                                    {% elseif contrat.statut == 'suspendu' %}text-yellow-800 bg-yellow-100
                                    {% else %}text-gray-800 bg-gray-100{% endif %}">
                                    {{ contrat.statutLabel }}
                                </span>
                            </td>
                            <td class="px-4 py-3">{{ contrat.nbLicences }}</td>
                            <td class="px-4 py-3">{{ contrat.totalHt|number_format(2, ',', ' ') }} EUR</td>
                            <td class="px-4 py-3 text-right">
                                <a href="{{ path('app_contrat_show', {id: contrat.id}) }}" class="text-blue-600 hover:underline">Voir</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <p class="text-gray-500">Aucun contrat.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
