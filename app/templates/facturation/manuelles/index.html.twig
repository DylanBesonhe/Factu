{% extends 'layout.html.twig' %}

{% block title %}Factures manuelles - Factu{% endblock %}

{% block page_title %}Factures manuelles{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_facturation_manuelles_new') }}" class="px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nouvelle facture
    </a>
{% endblock %}

{% block content %}
{% include 'facturation/_month_navigation.html.twig' with {routeName: 'app_facturation_manuelles'} %}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    {# Colonne 1: Brouillons #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-blue-50">
            <h3 class="font-semibold text-blue-800">Brouillons</h3>
            <p class="text-sm text-blue-600">{{ brouillons|length }} facture(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if brouillons|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucun brouillon</p>
            {% else %}
                {% for facture in brouillons %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-blue-50">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <a href="{{ path('app_facturation_show', {id: facture.id}) }}" class="font-medium text-blue-600 hover:underline">
                                    {{ facture.numero ?? 'Brouillon #' ~ facture.id }}
                                </a>
                                <p class="text-sm text-gray-900">{{ facture.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ facture.dateFacture|date('d/m/Y') }}</p>
                            </div>
                            <p class="font-medium text-gray-900">{{ facture.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            <form method="post" action="{{ path('app_facturation_valider', {id: facture.id}) }}" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ facture.id) }}">
                                <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-blue-600 hover:bg-blue-700 rounded cursor-pointer transition-colors duration-150">
                                    Valider
                                </button>
                            </form>
                            <a href="{{ path('app_facturation_edit', {id: facture.id}) }}" class="px-3 py-1 text-xs text-gray-600 bg-gray-100 hover:bg-gray-200 rounded cursor-pointer transition-colors duration-150" title="Modifier">
                                Modifier
                            </a>
                            <a href="{{ path('app_facturation_pdf', {id: facture.id}) }}" target="_blank" class="px-2 py-1 text-xs text-gray-600 bg-gray-100 hover:bg-gray-200 rounded cursor-pointer transition-colors duration-150" title="Apercu PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {# Colonne 2: Validees #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-green-50">
            <h3 class="font-semibold text-green-800">Validees</h3>
            <p class="text-sm text-green-600">{{ validees|length }} facture(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if validees|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucune facture validee</p>
            {% else %}
                {% for facture in validees %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-green-50">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <a href="{{ path('app_facturation_show', {id: facture.id}) }}" class="font-medium text-green-600 hover:underline">
                                    {{ facture.numero }}
                                </a>
                                <p class="text-sm text-gray-900">{{ facture.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ facture.dateFacture|date('d/m/Y') }}</p>
                            </div>
                            <p class="font-medium text-gray-900">{{ facture.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            <form method="post" action="{{ path('app_facturation_envoyer', {id: facture.id}) }}" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('envoyer' ~ facture.id) }}">
                                <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-green-600 hover:bg-green-700 rounded cursor-pointer transition-colors duration-150">
                                    Marquer envoyee
                                </button>
                            </form>
                            <a href="{{ path('app_facturation_pdf', {id: facture.id}) }}" target="_blank" class="px-2 py-1 text-xs text-white bg-gray-600 hover:bg-gray-700 rounded cursor-pointer transition-colors duration-150" title="Telecharger PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {# Colonne 3: Envoyees #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-purple-50">
            <h3 class="font-semibold text-purple-800">Envoyees</h3>
            <p class="text-sm text-purple-600">{{ envoyees|length }} facture(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if envoyees|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucune facture envoyee</p>
            {% else %}
                {% for facture in envoyees %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-purple-50 {{ facture.statut == 'payee' ? 'bg-green-50 border-green-200' : '' }}">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('app_facturation_show', {id: facture.id}) }}" class="font-medium text-purple-600 hover:underline">
                                        {{ facture.numero }}
                                    </a>
                                    {% if facture.statut == 'payee' %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-green-800 bg-green-200 rounded-full">Paye</span>
                                    {% endif %}
                                </div>
                                <p class="text-sm text-gray-900">{{ facture.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ facture.dateFacture|date('d/m/Y') }}</p>
                            </div>
                            <p class="font-medium text-gray-900">{{ facture.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            {% if facture.statut != 'payee' %}
                                <form method="post" action="{{ path('app_facturation_payer', {id: facture.id}) }}" class="flex-1">
                                    <input type="hidden" name="_token" value="{{ csrf_token('payer' ~ facture.id) }}">
                                    <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-purple-600 hover:bg-purple-700 rounded cursor-pointer transition-colors duration-150">
                                        Marquer payee
                                    </button>
                                </form>
                            {% else %}
                                <span class="flex-1 px-3 py-1 text-xs text-center text-green-700 bg-green-100 rounded">
                                    Reglee le {{ facture.datePaiement|date('d/m/Y') }}
                                </span>
                            {% endif %}
                            <a href="{{ path('app_facturation_pdf', {id: facture.id}) }}" target="_blank" class="px-2 py-1 text-xs text-white bg-gray-600 hover:bg-gray-700 rounded cursor-pointer transition-colors duration-150" title="Telecharger PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
