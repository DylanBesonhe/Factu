{% extends 'layout.html.twig' %}

{% block title %}Avoirs - Factu{% endblock %}

{% block page_title %}Avoirs{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_facturation_avoirs_new') }}" class="px-4 py-2 text-sm text-white bg-orange-600 hover:bg-orange-700 rounded-lg flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nouvel avoir libre
    </a>
{% endblock %}

{% block content %}
{% include 'facturation/_month_navigation.html.twig' with {routeName: 'app_facturation_avoirs'} %}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    {# Colonne 1: Brouillons #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-orange-50">
            <h3 class="font-semibold text-orange-800">Brouillons</h3>
            <p class="text-sm text-orange-600">{{ brouillons|length }} avoir(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if brouillons|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucun brouillon</p>
            {% else %}
                {% for avoir in brouillons %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-orange-50">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('app_facturation_show', {id: avoir.id}) }}" class="font-medium text-orange-600 hover:underline">
                                        {{ avoir.numero ?? 'Brouillon #' ~ avoir.id }}
                                    </a>
                                    {% if avoir.factureParente %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-blue-800 bg-blue-100 rounded-full">Lie</span>
                                    {% else %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-gray-600 bg-gray-100 rounded-full">Libre</span>
                                    {% endif %}
                                </div>
                                <p class="text-sm text-gray-900">{{ avoir.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ avoir.dateFacture|date('d/m/Y') }}</p>
                                {% if avoir.factureParente %}
                                    <p class="text-xs text-gray-400">Ref: {{ avoir.factureParente.numero }}</p>
                                {% endif %}
                            </div>
                            <p class="font-medium text-orange-600">{{ avoir.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            <form method="post" action="{{ path('app_facturation_valider', {id: avoir.id}) }}" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ avoir.id) }}">
                                <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-orange-600 hover:bg-orange-700 rounded cursor-pointer transition-colors duration-150">
                                    Valider
                                </button>
                            </form>
                            <a href="{{ path('app_facturation_edit', {id: avoir.id}) }}" class="px-3 py-1 text-xs text-gray-600 bg-gray-100 hover:bg-gray-200 rounded cursor-pointer transition-colors duration-150" title="Modifier">
                                Modifier
                            </a>
                            <a href="{{ path('app_facturation_pdf', {id: avoir.id}) }}" target="_blank" class="px-2 py-1 text-xs text-gray-600 bg-gray-100 hover:bg-gray-200 rounded cursor-pointer transition-colors duration-150" title="Apercu PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {# Colonne 2: Valides #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-green-50">
            <h3 class="font-semibold text-green-800">Valides</h3>
            <p class="text-sm text-green-600">{{ valides|length }} avoir(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if valides|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucun avoir valide</p>
            {% else %}
                {% for avoir in valides %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-green-50">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('app_facturation_show', {id: avoir.id}) }}" class="font-medium text-green-600 hover:underline">
                                        {{ avoir.numero }}
                                    </a>
                                    {% if avoir.factureParente %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-blue-800 bg-blue-100 rounded-full">Lie</span>
                                    {% else %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-gray-600 bg-gray-100 rounded-full">Libre</span>
                                    {% endif %}
                                </div>
                                <p class="text-sm text-gray-900">{{ avoir.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ avoir.dateFacture|date('d/m/Y') }}</p>
                                {% if avoir.factureParente %}
                                    <p class="text-xs text-gray-400">Ref: {{ avoir.factureParente.numero }}</p>
                                {% endif %}
                            </div>
                            <p class="font-medium text-orange-600">{{ avoir.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            <form method="post" action="{{ path('app_facturation_envoyer', {id: avoir.id}) }}" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('envoyer' ~ avoir.id) }}">
                                <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-green-600 hover:bg-green-700 rounded cursor-pointer transition-colors duration-150">
                                    Marquer envoye
                                </button>
                            </form>
                            <a href="{{ path('app_facturation_pdf', {id: avoir.id}) }}" target="_blank" class="px-2 py-1 text-xs text-white bg-gray-600 hover:bg-gray-700 rounded cursor-pointer transition-colors duration-150" title="Telecharger PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {# Colonne 3: Envoyes #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-purple-50">
            <h3 class="font-semibold text-purple-800">Envoyes</h3>
            <p class="text-sm text-purple-600">{{ envoyes|length }} avoir(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if envoyes|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucun avoir envoye</p>
            {% else %}
                {% for avoir in envoyes %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-purple-50 {{ avoir.statut == 'remboursee' ? 'bg-green-50 border-green-200' : '' }}">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('app_facturation_show', {id: avoir.id}) }}" class="font-medium text-purple-600 hover:underline">
                                        {{ avoir.numero }}
                                    </a>
                                    {% if avoir.statut == 'remboursee' %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-green-800 bg-green-200 rounded-full">Rembourse</span>
                                    {% endif %}
                                    {% if avoir.factureParente %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-blue-800 bg-blue-100 rounded-full">Lie</span>
                                    {% else %}
                                        <span class="px-2 py-0.5 text-xs font-semibold text-gray-600 bg-gray-100 rounded-full">Libre</span>
                                    {% endif %}
                                </div>
                                <p class="text-sm text-gray-900">{{ avoir.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ avoir.dateFacture|date('d/m/Y') }}</p>
                                {% if avoir.factureParente %}
                                    <p class="text-xs text-gray-400">Ref: {{ avoir.factureParente.numero }}</p>
                                {% endif %}
                            </div>
                            <p class="font-medium text-orange-600">{{ avoir.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            {% if avoir.statut != 'remboursee' %}
                                <form method="post" action="{{ path('app_facturation_rembourser', {id: avoir.id}) }}" class="flex-1">
                                    <input type="hidden" name="_token" value="{{ csrf_token('rembourser' ~ avoir.id) }}">
                                    <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-purple-600 hover:bg-purple-700 rounded cursor-pointer transition-colors duration-150">
                                        Marquer rembourse
                                    </button>
                                </form>
                            {% else %}
                                <span class="flex-1 px-3 py-1 text-xs text-center text-green-700 bg-green-100 rounded">
                                    Rembourse le {{ avoir.dateRemboursement|date('d/m/Y') }}
                                </span>
                            {% endif %}
                            <a href="{{ path('app_facturation_pdf', {id: avoir.id}) }}" target="_blank" class="px-2 py-1 text-xs text-white bg-gray-600 hover:bg-gray-700 rounded cursor-pointer transition-colors duration-150" title="Telecharger PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
