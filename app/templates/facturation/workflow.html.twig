{% extends 'layout.html.twig' %}

{% block title %}Facturation - Factu{% endblock %}

{% block page_title %}Workflow de facturation{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_facturation_liste') }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">
        Voir la liste
    </a>
{% endblock %}

{% block content %}
{# Navigation par mois #}
<div class="bg-white rounded-lg shadow p-4 mb-4">
    <div class="flex items-center justify-between">
        <a href="{{ path('app_facturation_workflow', {mois: moisPrecedent}) }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg cursor-pointer transition-colors duration-150">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Mois precedent
        </a>

        <div class="text-center">
            <h2 class="text-xl font-semibold text-gray-900">
                {{ dateReference|date('F Y')|capitalize }}
            </h2>
            {% if moisCourant != "now"|date('Y-m') %}
                <a href="{{ path('app_facturation_workflow') }}" class="text-sm text-blue-600 hover:underline">
                    Revenir au mois courant
                </a>
            {% endif %}
        </div>

        <a href="{{ path('app_facturation_workflow', {mois: moisSuivant}) }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg cursor-pointer transition-colors duration-150">
            Mois suivant
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </a>
    </div>
</div>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    {# Colonne 1: A creer #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-yellow-50">
            <h3 class="font-semibold text-yellow-800">A creer</h3>
            {% set totalAFacturer = contratsAFacturer.mensuelle|length + contratsAFacturer.trimestrielle|length + contratsAFacturer.annuelle|length %}
            <p class="text-sm text-yellow-600">{{ totalAFacturer }} contrat(s) a facturer</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-4">
            {% if totalAFacturer == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucun contrat a facturer</p>
            {% else %}
                {# Mensuelle #}
                {% if contratsAFacturer.mensuelle|length > 0 %}
                    <div class="mb-4">
                        <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Mensuelle ({{ contratsAFacturer.mensuelle|length }})</h4>
                        <div class="space-y-2">
                            {% for contrat in contratsAFacturer.mensuelle %}
                                <div class="border border-gray-200 rounded-lg p-3 hover:bg-yellow-50">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <p class="font-medium text-gray-900">{{ contrat.client.raisonSociale }}</p>
                                            <p class="text-sm text-gray-500">{{ contrat.numero }}</p>
                                            <p class="text-sm font-medium text-gray-700">{{ contrat.totalHt|number_format(2, ',', ' ') }} &euro; HT</p>
                                        </div>
                                        <form method="post" action="{{ path('app_facturation_creer', {id: contrat.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('creer_facture' ~ contrat.id) }}">
                                            <input type="hidden" name="mois" value="{{ moisCourant }}">
                                            <button type="submit" class="px-3 py-1 text-xs text-white bg-yellow-600 hover:bg-yellow-700 rounded cursor-pointer transition-colors duration-150">
                                                Creer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {# Trimestrielle #}
                {% if contratsAFacturer.trimestrielle|length > 0 %}
                    <div class="mb-4">
                        <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Trimestrielle ({{ contratsAFacturer.trimestrielle|length }})</h4>
                        <div class="space-y-2">
                            {% for contrat in contratsAFacturer.trimestrielle %}
                                <div class="border border-gray-200 rounded-lg p-3 hover:bg-yellow-50">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <p class="font-medium text-gray-900">{{ contrat.client.raisonSociale }}</p>
                                            <p class="text-sm text-gray-500">{{ contrat.numero }}</p>
                                            <p class="text-sm font-medium text-gray-700">{{ contrat.totalHt|number_format(2, ',', ' ') }} &euro; HT</p>
                                        </div>
                                        <form method="post" action="{{ path('app_facturation_creer', {id: contrat.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('creer_facture' ~ contrat.id) }}">
                                            <input type="hidden" name="mois" value="{{ moisCourant }}">
                                            <button type="submit" class="px-3 py-1 text-xs text-white bg-yellow-600 hover:bg-yellow-700 rounded cursor-pointer transition-colors duration-150">
                                                Creer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {# Annuelle #}
                {% if contratsAFacturer.annuelle|length > 0 %}
                    <div class="mb-4">
                        <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Annuelle ({{ contratsAFacturer.annuelle|length }})</h4>
                        <div class="space-y-2">
                            {% for contrat in contratsAFacturer.annuelle %}
                                <div class="border border-gray-200 rounded-lg p-3 hover:bg-yellow-50">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <p class="font-medium text-gray-900">{{ contrat.client.raisonSociale }}</p>
                                            <p class="text-sm text-gray-500">{{ contrat.numero }}</p>
                                            <p class="text-sm font-medium text-gray-700">{{ contrat.totalHt|number_format(2, ',', ' ') }} &euro; HT</p>
                                        </div>
                                        <form method="post" action="{{ path('app_facturation_creer', {id: contrat.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('creer_facture' ~ contrat.id) }}">
                                            <input type="hidden" name="mois" value="{{ moisCourant }}">
                                            <button type="submit" class="px-3 py-1 text-xs text-white bg-yellow-600 hover:bg-yellow-700 rounded cursor-pointer transition-colors duration-150">
                                                Creer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>

    {# Colonne 2: Brouillons #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-blue-50">
            <h3 class="font-semibold text-blue-800">Brouillons</h3>
            <p class="text-sm text-blue-600">{{ brouillons|length }} facture(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if brouillons|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucun brouillon</p>
            {% else %}
                {% for facture in brouillons %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-blue-50">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <a href="{{ path('app_facturation_show', {id: facture.id}) }}" class="font-medium text-blue-600 hover:underline">
                                    {{ facture.numero ?? 'Brouillon #' ~ facture.id }}
                                </a>
                                <p class="text-sm text-gray-900">{{ facture.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ facture.dateFacture|date('d/m/Y') }}</p>
                            </div>
                            <p class="font-medium text-gray-900">{{ facture.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            <form method="post" action="{{ path('app_facturation_valider', {id: facture.id}) }}" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('valider' ~ facture.id) }}">
                                <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-blue-600 hover:bg-blue-700 rounded cursor-pointer transition-colors duration-150">
                                    Valider
                                </button>
                            </form>
                            <a href="{{ path('app_facturation_edit', {id: facture.id}) }}" class="px-3 py-1 text-xs text-gray-600 bg-gray-100 hover:bg-gray-200 rounded cursor-pointer transition-colors duration-150" title="Modifier">
                                Modifier
                            </a>
                            <a href="{{ path('app_facturation_pdf', {id: facture.id}) }}" target="_blank" class="px-2 py-1 text-xs text-gray-600 bg-gray-100 hover:bg-gray-200 rounded cursor-pointer transition-colors duration-150" title="Apercu PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {# Colonne 3: Validees #}
    <div class="bg-white rounded-lg shadow">
        <div class="p-4 border-b border-gray-200 bg-green-50">
            <h3 class="font-semibold text-green-800">Validees</h3>
            <p class="text-sm text-green-600">{{ validees|length }} facture(s)</p>
        </div>
        <div class="p-4 min-h-[400px] space-y-2">
            {% if validees|length == 0 %}
                <p class="text-sm text-gray-500 text-center py-8">Aucune facture validee</p>
            {% else %}
                {% for facture in validees %}
                    <div class="border border-gray-200 rounded-lg p-3 hover:bg-green-50">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <a href="{{ path('app_facturation_show', {id: facture.id}) }}" class="font-medium text-green-600 hover:underline">
                                    {{ facture.numero }}
                                </a>
                                <p class="text-sm text-gray-900">{{ facture.clientRaisonSociale }}</p>
                                <p class="text-sm text-gray-500">{{ facture.dateFacture|date('d/m/Y') }}</p>
                            </div>
                            <p class="font-medium text-gray-900">{{ facture.totalTtc|number_format(2, ',', ' ') }} &euro;</p>
                        </div>
                        <div class="flex gap-2">
                            <form method="post" action="{{ path('app_facturation_envoyer', {id: facture.id}) }}" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('envoyer' ~ facture.id) }}">
                                <button type="submit" class="w-full px-3 py-1 text-xs text-white bg-green-600 hover:bg-green-700 rounded cursor-pointer transition-colors duration-150">
                                    Marquer envoyee
                                </button>
                            </form>
                            <a href="{{ path('app_facturation_pdf', {id: facture.id}) }}" target="_blank" class="px-2 py-1 text-xs text-white bg-gray-600 hover:bg-gray-700 rounded cursor-pointer transition-colors duration-150" title="Telecharger PDF">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
