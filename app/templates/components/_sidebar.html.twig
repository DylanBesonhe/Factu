<aside id="sidebar"
       x-data="{ expanded: false }"
       @mouseenter="expanded = true"
       @mouseleave="expanded = false"
       :class="expanded ? 'w-64 z-40 shadow-2xl' : 'w-16 z-30'"
       class="fixed top-0 left-0 h-screen transition-all duration-300 ease-in-out hidden sm:block"
       aria-label="Sidebar">
    <div class="h-full py-4 overflow-y-auto overflow-x-hidden bg-gray-800">
        <a href="{{ path('app_dashboard') }}" class="flex items-center px-4 mb-5">
            <svg class="w-8 h-8 text-white flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span x-show="expanded" x-transition:enter="transition-opacity duration-200" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" class="ms-3 text-xl font-semibold whitespace-nowrap text-white">Factu</span>
        </a>
        <ul class="space-y-2 font-medium px-2">
            <li>
                <a href="{{ path('app_dashboard') }}" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') == 'app_dashboard' ? 'bg-gray-700' : '' }}" title="Tableau de bord">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
                        <path d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z"/>
                        <path d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z"/>
                    </svg>
                    <span x-show="expanded" x-transition class="ms-3 whitespace-nowrap">Tableau de bord</span>
                </a>
            </li>
            {# Menu accordeon Clients #}
            {% set isClientSection = app.request.attributes.get('_route') starts with 'app_admin_clients' or app.request.attributes.get('_route') starts with 'app_contrat' or app.request.attributes.get('_route') starts with 'app_licence' %}
            <li x-data="{ open: {{ isClientSection ? 'true' : 'false' }} }">
                <button @click="open = !open" type="button" class="flex items-center w-full p-2 rounded-lg text-white hover:bg-gray-700 group {{ isClientSection ? 'bg-gray-700' : '' }}" title="Clients">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                        <path d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z"/>
                    </svg>
                    <span x-show="expanded" x-transition class="flex-1 ms-3 text-left whitespace-nowrap">Clients</span>
                    <svg x-show="expanded" :class="open ? 'rotate-180' : ''" class="w-4 h-4 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <ul x-show="open && expanded" x-collapse class="py-2 space-y-1">
                    <li>
                        <a href="{{ path('app_admin_clients') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') starts with 'app_admin_clients' ? 'bg-gray-600' : '' }}">
                            Clients
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_contrat_index') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') starts with 'app_contrat' ? 'bg-gray-600' : '' }}">
                            Contrats
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_licence_index') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') starts with 'app_licence' ? 'bg-gray-600' : '' }}">
                            Licences
                        </a>
                    </li>
                </ul>
            </li>
            {# Menu accordeon Facturation #}
            <li x-data="{ open: {{ app.request.attributes.get('_route') starts with 'app_facturation' ? 'true' : 'false' }} }">
                <button @click="open = !open" type="button" class="flex items-center w-full p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_facturation' ? 'bg-gray-700' : '' }}" title="Facturation">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.876.517A1 1 0 0 0 17 0H3a1 1 0 0 0-.871.508C.7 2.503-.446 7.616.201 10.845A3.462 3.462 0 0 0 4 14h.028C5.227 18.632 9 21.007 9 21.007a1.009 1.009 0 0 0 1.116-.034c1.268-.907 4.531-3.441 5.763-6.973h.162a3.467 3.467 0 0 0 3.742-3.156c.64-3.241-.485-8.358-1.907-10.327ZM3.3 11.973a1.47 1.47 0 0 1-1.1-1.167A13.58 13.58 0 0 1 3.313 2h.042A3.475 3.475 0 0 0 4 5.563V11.5a3.5 3.5 0 0 0 .063.576c-.24-.085-.48-.126-.762-.103Zm14.6-1.167a1.467 1.467 0 0 1-1.5 1.167 3.444 3.444 0 0 0-.458.069A3.5 3.5 0 0 0 16 11.5V5.563a3.475 3.475 0 0 0 .654-3.563H16.7a13.543 13.543 0 0 1 1.2 8.806Z"/>
                    </svg>
                    <span x-show="expanded" x-transition class="flex-1 ms-3 text-left whitespace-nowrap">Facturation</span>
                    <svg x-show="expanded" :class="open ? 'rotate-180' : ''" class="w-4 h-4 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <ul x-show="open && expanded" x-collapse class="py-2 space-y-1">
                    <li>
                        <a href="{{ path('app_facturation_workflow') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') == 'app_facturation_workflow' ? 'bg-gray-600' : '' }}">
                            Factures recurrentes
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_facturation_manuelles') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') starts with 'app_facturation_manuelles' ? 'bg-gray-600' : '' }}">
                            Factures manuelles
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_facturation_avoirs') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') starts with 'app_facturation_avoirs' ? 'bg-gray-600' : '' }}">
                            Avoirs
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_facturation_liste') }}" class="flex items-center w-full p-2 pl-11 rounded-lg text-white hover:bg-gray-700 text-sm {{ app.request.attributes.get('_route') == 'app_facturation_liste' ? 'bg-gray-600' : '' }}">
                            Historique
                        </a>
                    </li>
                </ul>
            </li>
        </ul>

        {# Section Parametres #}
        <ul class="pt-4 mt-4 space-y-2 font-medium border-t border-gray-700 px-2">
            <li x-show="expanded" class="text-xs uppercase text-gray-500 px-2 pt-2 pb-1">Parametres</li>
            <li>
                <a href="{{ path('app_admin_emetteurs') }}" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_admin_emetteurs' ? 'bg-gray-700' : '' }}" title="Emetteurs">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span x-show="expanded" x-transition class="ms-3 whitespace-nowrap">Emetteurs</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_modules') }}" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_admin_modules' ? 'bg-gray-700' : '' }}" title="Modules">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    <span x-show="expanded" x-transition class="ms-3 whitespace-nowrap">Modules</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_cgv') }}" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_admin_cgv' ? 'bg-gray-700' : '' }}" title="CGV">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <span x-show="expanded" x-transition class="ms-3 whitespace-nowrap">CGV</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_users') }}" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') == 'app_admin_users' ? 'bg-gray-700' : '' }}" title="Utilisateurs">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                    <span x-show="expanded" x-transition class="ms-3 whitespace-nowrap">Utilisateurs</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_documentation_index') }}" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group {{ app.request.attributes.get('_route') starts with 'app_documentation' ? 'bg-gray-700' : '' }}" title="Documentation">
                    <svg class="w-5 h-5 text-gray-400 transition duration-75 group-hover:text-white flex-shrink-0" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <span x-show="expanded" x-transition class="ms-3 whitespace-nowrap">Documentation</span>
                </a>
            </li>
        </ul>
    </div>
</aside>
