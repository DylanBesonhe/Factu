{#
    Icone pour indiquer une facture particuliere avec tooltip CSS pur

    Usage:
    {% include 'components/_facture_particuliere_icon.html.twig' with {description: contrat.factureParticuliereDescription} %}
#}
<span class="relative group cursor-help inline-flex">
    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
    </svg>
    <span class="absolute bottom-full left-0 mb-2 px-3 py-2 text-sm text-white bg-gray-900 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-opacity duration-200 w-64 z-50">
        <span class="font-semibold text-yellow-400 block mb-1">Facture particuliere</span>
        {{ description|default('Aucune description') }}
        <span class="absolute top-full left-4 border-4 border-transparent border-t-gray-900"></span>
    </span>
</span>
