{% extends 'layout.html.twig' %}

{% block title %}Modifier {{ client.raisonSociale }} - Factu{% endblock %}

{% block page_title %}Modifier le client{% endblock %}

{% block breadcrumbs %}
    {% set breadcrumbs = [
        {label: 'Clients', path: path('app_client_index')},
        {label: client.raisonSociale, path: path('app_client_show', {id: client.id})},
        {label: 'Modifier'}
    ] %}
    {% include 'components/_breadcrumbs.html.twig' %}
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_client_show', {id: client.id}) }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">
        Annuler
    </a>
{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow p-6">
    <p class="text-sm text-gray-500 mb-6">{{ client.code }} - {{ client.raisonSociale }}</p>

    {{ form_start(form) }}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4">Informations générales</h3>
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        {{ form_row(form.code, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_row(form.siren, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                    </div>
                    {{ form_row(form.raisonSociale, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_row(form.adresse, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                </div>
            </div>

            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4">Coordonnées</h3>
                <div class="space-y-4">
                    {{ form_row(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_row(form.telephone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                </div>

                <h3 class="text-lg font-medium text-gray-900 mb-4 mt-6">Informations bancaires</h3>
                <div class="space-y-4">
                    {{ form_row(form.iban, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_row(form.bic, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                </div>
            </div>
        </div>

        <hr class="my-6">

        <div class="flex items-center justify-between">
            {{ form_row(form.actif) }}
            <button type="submit" class="px-6 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg">
                Enregistrer
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
