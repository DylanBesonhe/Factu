{% extends 'layout.html.twig' %}

{% block title %}Clients - Factu{% endblock %}

{% block page_title %}Clients{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_client_export', {search: search, actif: actifFilter}) }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Exporter CSV
    </a>
    <a href="{{ path('app_client_new') }}" class="px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg">
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nouveau client
    </a>
{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow">
    <div class="p-4 border-b border-gray-200">
        <form method="get" action="{{ path('app_client_index') }}" class="flex flex-wrap items-center gap-4">
            <div class="relative flex-1 min-w-[200px]">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher (code, nom, SIREN)..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <select name="actif" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                <option value="">Tous les statuts</option>
                <option value="1" {{ actifFilter == '1' ? 'selected' : '' }}>Actifs</option>
                <option value="0" {{ actifFilter == '0' ? 'selected' : '' }}>Inactifs</option>
            </select>
            <button type="submit" class="px-4 py-2 text-sm text-white bg-gray-600 hover:bg-gray-700 rounded-lg">
                Filtrer
            </button>
            <a href="{{ path('app_client_index') }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">
                Reset
            </a>
        </form>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th class="px-6 py-3">
                        <a href="{{ path('app_client_index', {search: search, actif: actifFilter, sort: 'code', direction: sort == 'code' and direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center hover:text-blue-600">
                            Code
                            {% if sort == 'code' %}
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ direction == 'ASC' ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' }}"></path>
                                </svg>
                            {% endif %}
                        </a>
                    </th>
                    <th class="px-6 py-3">
                        <a href="{{ path('app_client_index', {search: search, actif: actifFilter, sort: 'raisonSociale', direction: sort == 'raisonSociale' and direction == 'ASC' ? 'DESC' : 'ASC'}) }}" class="flex items-center hover:text-blue-600">
                            Raison sociale
                            {% if sort == 'raisonSociale' %}
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ direction == 'ASC' ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' }}"></path>
                                </svg>
                            {% endif %}
                        </a>
                    </th>
                    <th class="px-6 py-3">SIREN</th>
                    <th class="px-6 py-3">Email</th>
                    <th class="px-6 py-3">Téléphone</th>
                    <th class="px-6 py-3">Statut</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-6 py-4 font-mono text-gray-900">{{ client.code }}</td>
                        <td class="px-6 py-4 font-medium text-gray-900">{{ client.raisonSociale }}</td>
                        <td class="px-6 py-4">{{ client.siren ?? '-' }}</td>
                        <td class="px-6 py-4">{{ client.email ?? '-' }}</td>
                        <td class="px-6 py-4">{{ client.telephone ?? '-' }}</td>
                        <td class="px-6 py-4">
                            {% if client.actif %}
                                <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">Actif</span>
                            {% else %}
                                <span class="px-2 py-1 text-xs font-medium text-gray-800 bg-gray-100 rounded-full">Inactif</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-2">
                                <a href="{{ path('app_client_show', {id: client.id}) }}" class="inline-flex items-center px-2 py-1 text-xs font-medium text-blue-700 bg-blue-50 rounded hover:bg-blue-100">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    Voir
                                </a>
                                <a href="{{ path('app_client_edit', {id: client.id}) }}" class="inline-flex items-center px-2 py-1 text-xs font-medium text-amber-700 bg-amber-50 rounded hover:bg-amber-100">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr class="bg-white border-b">
                        <td class="px-6 py-4 text-center text-gray-500" colspan="7">
                            Aucun client trouvé
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if totalPages > 1 %}
        <div class="p-4 border-t border-gray-200 flex items-center justify-between">
            <p class="text-sm text-gray-500">{{ totalItems }} client(s) trouvé(s)</p>
            <nav class="flex items-center gap-1">
                {% if page > 1 %}
                    <a href="{{ path('app_client_index', {search: search, actif: actifFilter, sort: sort, direction: direction, page: page - 1}) }}" class="px-3 py-1 text-sm border rounded hover:bg-gray-50">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                {% endif %}

                {% for p in 1..totalPages %}
                    {% if p >= page - 2 and p <= page + 2 %}
                        <a href="{{ path('app_client_index', {search: search, actif: actifFilter, sort: sort, direction: direction, page: p}) }}" class="px-3 py-1 text-sm border rounded {{ p == page ? 'bg-blue-600 text-white border-blue-600' : 'hover:bg-gray-50' }}">
                            {{ p }}
                        </a>
                    {% endif %}
                {% endfor %}

                {% if page < totalPages %}
                    <a href="{{ path('app_client_index', {search: search, actif: actifFilter, sort: sort, direction: direction, page: page + 1}) }}" class="px-3 py-1 text-sm border rounded hover:bg-gray-50">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                {% endif %}
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
