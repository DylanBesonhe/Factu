{% extends 'layout.html.twig' %}

{% block title %}{{ client.raisonSociale }} - Factu{% endblock %}

{% block page_title %}{{ client.raisonSociale }}{% endblock %}

{% block page_actions %}
    <form method="post" action="{{ path('app_client_toggle', {id: client.id}) }}" class="inline">
        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ client.id) }}">
        <button type="submit" class="px-4 py-2 text-sm {{ client.actif ? 'text-yellow-600 hover:bg-yellow-50' : 'text-green-600 hover:bg-green-50' }} rounded-lg">
            {{ client.actif ? 'Desactiver' : 'Activer' }}
        </button>
    </form>
    <a href="{{ path('app_client_edit', {id: client.id}) }}" class="px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg">
        Modifier
    </a>
    <a href="{{ path('app_client_index') }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">
        Retour
    </a>
{% endblock %}

{% block content %}
<div x-data="{ activeTab: 'infos' }">
    {# Tabs navigation #}
    <div class="border-b border-gray-200 mb-4">
        <nav class="flex gap-4">
            <button @click="activeTab = 'infos'" :class="activeTab === 'infos' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'" class="py-2 px-1 border-b-2 font-medium text-sm">
                Informations
            </button>
            <button @click="activeTab = 'contacts'" :class="activeTab === 'contacts' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'" class="py-2 px-1 border-b-2 font-medium text-sm">
                Contacts ({{ client.contacts|length }})
            </button>
            <button @click="activeTab = 'notes'" :class="activeTab === 'notes' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'" class="py-2 px-1 border-b-2 font-medium text-sm">
                Notes ({{ client.notes|length }})
            </button>
            <button @click="activeTab = 'liens'" :class="activeTab === 'liens' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'" class="py-2 px-1 border-b-2 font-medium text-sm">
                Liens ({{ client.liensSource|length }})
            </button>
        </nav>
    </div>

    {# Tab: Informations #}
    <div x-show="activeTab === 'infos'" class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Informations generales</h3>
            <dl class="space-y-3">
                <div class="flex justify-between">
                    <dt class="text-gray-500">Code</dt>
                    <dd class="font-mono text-gray-900">{{ client.code }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Raison sociale</dt>
                    <dd class="text-gray-900">{{ client.raisonSociale }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">SIREN</dt>
                    <dd class="text-gray-900">{{ client.siren ?? '-' }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Statut</dt>
                    <dd>
                        {% if client.actif %}
                            <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">Actif</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs font-medium text-gray-800 bg-gray-100 rounded-full">Inactif</span>
                        {% endif %}
                    </dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Date creation</dt>
                    <dd class="text-gray-900">{{ client.createdAt|date('d/m/Y H:i') }}</dd>
                </div>
            </dl>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Coordonnees</h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-gray-500 mb-1">Adresse</dt>
                    <dd class="text-gray-900">{{ client.adresse ? client.adresse|nl2br : '-' }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Email</dt>
                    <dd class="text-gray-900">
                        {% if client.email %}
                            <a href="mailto:{{ client.email }}" class="text-blue-600 hover:underline">{{ client.email }}</a>
                        {% else %}
                            -
                        {% endif %}
                    </dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">Telephone</dt>
                    <dd class="text-gray-900">{{ client.telephone ?? '-' }}</dd>
                </div>
            </dl>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Informations bancaires</h3>
            <dl class="space-y-3">
                <div class="flex justify-between">
                    <dt class="text-gray-500">IBAN</dt>
                    <dd class="font-mono text-gray-900">{{ client.iban ?? '-' }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-gray-500">BIC</dt>
                    <dd class="font-mono text-gray-900">{{ client.bic ?? '-' }}</dd>
                </div>
            </dl>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Contact principal</h3>
            {% set principalContact = client.contactPrincipal %}
            {% if principalContact %}
                <p class="font-medium text-gray-900">{{ principalContact.fullName }}</p>
                {% if principalContact.fonction %}
                    <p class="text-sm text-gray-500">{{ principalContact.fonction }}</p>
                {% endif %}
                {% if principalContact.email %}
                    <p class="text-sm"><a href="mailto:{{ principalContact.email }}" class="text-blue-600 hover:underline">{{ principalContact.email }}</a></p>
                {% endif %}
                {% if principalContact.telephone %}
                    <p class="text-sm text-gray-600">{{ principalContact.telephone }}</p>
                {% endif %}
            {% else %}
                <p class="text-gray-500">Aucun contact principal defini</p>
            {% endif %}
        </div>
    </div>

    {# Tab: Contacts #}
    <div x-show="activeTab === 'contacts'" class="grid grid-cols-1 lg:grid-cols-3 gap-4">
        <div class="lg:col-span-2 bg-white rounded-lg shadow">
            <div class="p-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Liste des contacts</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th class="px-4 py-3">Nom</th>
                            <th class="px-4 py-3">Fonction</th>
                            <th class="px-4 py-3">Email</th>
                            <th class="px-4 py-3">Tel</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in client.contacts %}
                            <tr class="bg-white border-b hover:bg-gray-50">
                                <td class="px-4 py-3 font-medium text-gray-900">
                                    {{ contact.fullName }}
                                    {% if contact.principal %}
                                        <span class="ml-1 px-2 py-0.5 text-xs font-medium text-blue-800 bg-blue-100 rounded-full">Principal</span>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-3">{{ contact.fonction ?? '-' }}</td>
                                <td class="px-4 py-3">{{ contact.email ?? '-' }}</td>
                                <td class="px-4 py-3">{{ contact.telephone ?? '-' }}</td>
                                <td class="px-4 py-3">
                                    {% if not contact.principal %}
                                        <form method="post" action="{{ path('app_client_contact_principal', {id: client.id, contactId: contact.id}) }}" class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('principal_contact' ~ contact.id) }}">
                                            <button type="submit" class="text-blue-600 hover:text-blue-900 mr-2" title="Definir comme principal">
                                                <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form method="post" action="{{ path('app_client_contact_delete', {id: client.id, contactId: contact.id}) }}" class="inline" onsubmit="return confirm('Supprimer ce contact ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_contact' ~ contact.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-900" title="Supprimer">
                                            <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="px-4 py-3 text-center text-gray-500">Aucun contact</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Ajouter un contact</h3>
            {{ form_start(contactForm, {'action': path('app_client_contact_new', {id: client.id})}) }}
                {{ form_row(contactForm.nom, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(contactForm.prenom, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(contactForm.fonction, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(contactForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(contactForm.telephone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(contactForm.principal) }}
                <button type="submit" class="w-full px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg mt-2">Ajouter</button>
            {{ form_end(contactForm) }}
        </div>
    </div>

    {# Tab: Notes #}
    <div x-show="activeTab === 'notes'" class="grid grid-cols-1 lg:grid-cols-3 gap-4">
        <div class="lg:col-span-2 space-y-4">
            {% for note in client.notes %}
                <div class="bg-white rounded-lg shadow p-4">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <p class="text-gray-900 whitespace-pre-wrap">{{ note.contenu }}</p>
                            <p class="text-sm text-gray-500 mt-2">
                                {{ note.createdAt|date('d/m/Y H:i') }}
                                {% if note.auteur %} - {{ note.auteur }}{% endif %}
                            </p>
                        </div>
                        <form method="post" action="{{ path('app_client_note_delete', {id: client.id, noteId: note.id}) }}" onsubmit="return confirm('Supprimer cette note ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_note' ~ note.id) }}">
                            <button type="submit" class="text-red-600 hover:text-red-900">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="bg-white rounded-lg shadow p-4 text-center text-gray-500">
                    Aucune note
                </div>
            {% endfor %}
        </div>

        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Ajouter une note</h3>
            {{ form_start(noteForm, {'action': path('app_client_note_new', {id: client.id})}) }}
                {{ form_row(noteForm.contenu, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(noteForm.auteur, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                <button type="submit" class="w-full px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg mt-2">Ajouter</button>
            {{ form_end(noteForm) }}
        </div>
    </div>

    {# Tab: Liens #}
    <div x-show="activeTab === 'liens'" class="grid grid-cols-1 lg:grid-cols-3 gap-4">
        <div class="lg:col-span-2 bg-white rounded-lg shadow">
            <div class="p-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Clients lies</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th class="px-4 py-3">Type</th>
                            <th class="px-4 py-3">Client</th>
                            <th class="px-4 py-3">Code</th>
                            <th class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lien in client.liensSource %}
                            <tr class="bg-white border-b hover:bg-gray-50">
                                <td class="px-4 py-3">
                                    {% if lien.type == 'filiale' %}
                                        <span class="px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded-full">Filiale</span>
                                    {% elseif lien.type == 'groupe' %}
                                        <span class="px-2 py-1 text-xs font-medium text-purple-800 bg-purple-100 rounded-full">Groupe</span>
                                    {% else %}
                                        <span class="px-2 py-1 text-xs font-medium text-gray-800 bg-gray-100 rounded-full">Partenaire</span>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-3">
                                    <a href="{{ path('app_client_show', {id: lien.clientCible.id}) }}" class="text-blue-600 hover:underline">
                                        {{ lien.clientCible.raisonSociale }}
                                    </a>
                                </td>
                                <td class="px-4 py-3 font-mono">{{ lien.clientCible.code }}</td>
                                <td class="px-4 py-3">
                                    <form method="post" action="{{ path('app_client_lien_delete', {id: client.id, lienId: lien.id}) }}" class="inline" onsubmit="return confirm('Supprimer ce lien ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_lien' ~ lien.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-900" title="Supprimer">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="px-4 py-3 text-center text-gray-500">Aucun lien</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-4">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Ajouter un lien</h3>
            {{ form_start(lienForm, {'action': path('app_client_lien_new', {id: client.id})}) }}
                {{ form_row(lienForm.type, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_row(lienForm.clientCible, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500'}}) }}
                <button type="submit" class="w-full px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg mt-2">Ajouter</button>
            {{ form_end(lienForm) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
{% endblock %}
