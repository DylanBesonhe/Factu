{% extends 'layout.html.twig' %}

{% block title %}Contrats - Factu{% endblock %}

{% block page_title %}Contrats{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow">
    <div class="p-4 border-b border-gray-200 flex justify-between items-center">
        <div class="relative">
            <input type="text" placeholder="Rechercher..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
            <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </div>
        <a href="#" class="px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg">Nouveau contrat</a>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th class="px-6 py-3">Client</th>
                    <th class="px-6 py-3">Instance</th>
                    <th class="px-6 py-3">Signature</th>
                    <th class="px-6 py-3">Anniversaire</th>
                    <th class="px-6 py-3">Periodicite</th>
                    <th class="px-6 py-3">Licences</th>
                    <th class="px-6 py-3">Statut</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-white border-b hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium text-gray-900" colspan="8">
                        Aucun contrat pour le moment
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
