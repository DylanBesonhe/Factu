{% extends 'layout.html.twig' %}

{% block title %}Contrats - Factu{% endblock %}

{% block page_title %}Contrats{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_contrat_export', {search: search, statut: statutFilter}) }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Exporter CSV
    </a>
    <a href="{{ path('app_contrat_new') }}" class="px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg">
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Nouveau contrat
    </a>
{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow">
    <div class="p-4 border-b border-gray-200">
        <form method="get" action="{{ path('app_contrat_index') }}" class="flex flex-wrap items-center gap-4">
            <div class="relative flex-1 min-w-[200px]">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher (numero, client, instance)..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                <svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <select name="statut" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                <option value="">Tous les statuts</option>
                <option value="actif" {{ statutFilter == 'actif' ? 'selected' : '' }}>Actifs</option>
                <option value="suspendu" {{ statutFilter == 'suspendu' ? 'selected' : '' }}>Suspendus</option>
                <option value="resilie" {{ statutFilter == 'resilie' ? 'selected' : '' }}>Résiliés</option>
            </select>
            <button type="submit" class="px-4 py-2 text-sm text-white bg-gray-600 hover:bg-gray-700 rounded-lg">Filtrer</button>
            <a href="{{ path('app_contrat_index') }}" class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg">Reset</a>
        </form>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th class="px-6 py-3">Numéro</th>
                    <th class="px-6 py-3">Client</th>
                    <th class="px-6 py-3">Instance</th>
                    <th class="px-6 py-3">Périodicité</th>
                    <th class="px-6 py-3">Licences</th>
                    <th class="px-6 py-3">Total HT</th>
                    <th class="px-6 py-3">Statut</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for contrat in contrats %}
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-6 py-4 font-mono text-gray-900">
                            {{ contrat.numero }}
                            {% if contrat.factureParticuliere %}
                                <span class="ml-1 px-1.5 py-0.5 text-xs font-medium text-orange-800 bg-orange-100 rounded" title="Facture particulière">!</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ path('app_client_show', {id: contrat.client.id}) }}" class="text-blue-600 hover:text-blue-900">
                                {{ contrat.client.raisonSociale }}
                            </a>
                        </td>
                        <td class="px-6 py-4">{{ contrat.instance.nomActuel ?? '-' }}</td>
                        <td class="px-6 py-4">{{ contrat.periodiciteLabel }}</td>
                        <td class="px-6 py-4">{{ contrat.nbLicences }}</td>
                        <td class="px-6 py-4 font-medium">{{ contrat.totalHt|number_format(2, ',', ' ') }} &euro;</td>
                        <td class="px-6 py-4">
                            {% if contrat.statut == 'actif' %}
                                <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">Actif</span>
                            {% elseif contrat.statut == 'suspendu' %}
                                <span class="px-2 py-1 text-xs font-medium text-yellow-800 bg-yellow-100 rounded-full">Suspendu</span>
                            {% else %}
                                <span class="px-2 py-1 text-xs font-medium text-red-800 bg-red-100 rounded-full">Résilié</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-2">
                                <a href="{{ path('app_contrat_show', {id: contrat.id}) }}" class="inline-flex items-center px-2 py-1 text-xs font-medium text-blue-700 bg-blue-50 rounded hover:bg-blue-100">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    Voir
                                </a>
                                <a href="{{ path('app_contrat_edit', {id: contrat.id}) }}" class="inline-flex items-center px-2 py-1 text-xs font-medium text-amber-700 bg-amber-50 rounded hover:bg-amber-100">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Modifier
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr class="bg-white border-b">
                        <td class="px-6 py-4 text-center text-gray-500" colspan="8">Aucun contrat trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if totalPages > 1 %}
        <div class="p-4 border-t border-gray-200 flex items-center justify-between">
            <p class="text-sm text-gray-500">{{ totalItems }} contrat(s) trouvé(s)</p>
            <nav class="flex items-center gap-1">
                {% if page > 1 %}
                    <a href="{{ path('app_contrat_index', {search: search, statut: statutFilter, sort: sort, direction: direction, page: page - 1}) }}" class="px-3 py-1 text-sm border rounded hover:bg-gray-50">&laquo;</a>
                {% endif %}
                {% for p in 1..totalPages %}
                    {% if p >= page - 2 and p <= page + 2 %}
                        <a href="{{ path('app_contrat_index', {search: search, statut: statutFilter, sort: sort, direction: direction, page: p}) }}" class="px-3 py-1 text-sm border rounded {{ p == page ? 'bg-blue-600 text-white border-blue-600' : 'hover:bg-gray-50' }}">{{ p }}</a>
                    {% endif %}
                {% endfor %}
                {% if page < totalPages %}
                    <a href="{{ path('app_contrat_index', {search: search, statut: statutFilter, sort: sort, direction: direction, page: page + 1}) }}" class="px-3 py-1 text-sm border rounded hover:bg-gray-50">&raquo;</a>
                {% endif %}
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
